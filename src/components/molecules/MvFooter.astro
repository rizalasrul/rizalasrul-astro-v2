---
// astro
import { Icon } from 'astro-icon/components';

const today = new Date();
---

<footer
  class="flex flex-col items-center container mx-auto p-10 text-center gap-10 pb-40"
>
  &copy; {today.getFullYear()} rizalasrul. All rights reserved.
  <div class="flex items-center gap-6 text-5xl">
    <a
      href="https://github.com/rizalasrul"
      target="_blank"
      class="border-1 p-1 border-black rounded-full bg-pblue shadow-card hover:shadow-hover transition"
    >
      <Icon name="github" />
    </a>
    <a
      href="https://instagram.com/rizalasrul"
      target="_blank"
      class="border-1 p-1 border-black bg-ppink shadow-card hover:shadow-hover transition"
    >
      <Icon name="instagram" />
    </a>
    <a
      href="https://www.linkedin.com/in/rizalasrul/"
      target="_blank"
      class="border-1 p-1 border-black rounded-full bg-pgreen shadow-card hover:shadow-hover transition"
    >
      <Icon name="linkedin" />
    </a>
  </div>
</footer>
