---
// components
import AtBaseHead from '@/components/atoms/AtBaseHead.astro';
import MvHeader from '@/components/molecules/MvHeader.astro';
import MvFooter from '@/components/molecules/MvFooter.astro';
import OrJapanMap from '@/components/organisms/OrJapanMap.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <AtBaseHead
      title={'Japan Prefecture Map'}
      description={'Interactive map of Japanese prefectures with detailed information'}
    />
  </head>
  <body class="p-0 m-0 max-w-screen">
    <!-- Google Tag Manager (noscript) -->
      <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5LVDQDHK"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <MvHeader />
    <main class="container mx-auto md:px-10 py-8">
      <OrJapanMap />
    </main>
    <MvFooter />
  </body>
</html>
